{
  "name": "logicarena-front",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun --bun next dev",
    "build": "bun --bun next build",
    "start": "bun --bun next start",
    "lint": "bun --bun next lint",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "analyze": "bun scripts/analyze-bundle.js",
    "build:prod": "NODE_ENV=production bun --bun next build",
    "build:standalone": "bun --bun next build && cp -r .next/standalone dist/",
    "install:clean": "rm -rf node_modules bun.lockb && bun install",
    "typecheck": "bun --bun tsc --noEmit",
    "format": "bun --bun prettier --write .",
    "format:check": "bun --bun prettier --check ."
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@monaco-editor/react": "^4.6.0",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@sentry/nextjs": "^7.120.3",
    "@use-gesture/react": "^10.3.0",
    "axios": "^1.6.2",
    "classnames": "^2.3.2",
    "formik": "^2.4.5",
    "framer-motion": "^10.16.16",
    "lodash": "^4.17.21",
    "lucide-react": "^0.294.0",
    "monaco-editor": "^0.44.0",
    "next": "14.0.3",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intersection-observer": "^9.5.3",
    "react-query": "^3.39.3",
    "socket.io-client": "^4.7.2",
    "tailwindcss": "^3.3.5",
    "yup": "^1.3.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.10",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.9.4",
    "@types/prop-types": "^15.7.15",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.54.0",
    "eslint-config-next": "14.0.3",
    "ignore-loader": "^0.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.31",
    "typescript": "^5.3.2"
  },
  "sideEffects": false
}
