# LogicArena Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_USER=your_secure_db_username
POSTGRES_PASSWORD=your_secure_db_password
POSTGRES_DB=logicarena
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# Redis Configuration  
REDIS_URL=redis://redis:6379/0

# JWT Security Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_EXPIRATION_DAYS=7

# CSRF Protection
CSRF_SECRET=your_csrf_secret_key_change_in_production
SECRET_KEY=your_general_secret_key_change_in_production

# Google OAuth Configuration
# Get these from: https://console.developers.google.com/
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# OAuth Security
OAUTH_STATE_EXPIRY=600

# Service URLs
PROOF_CHECKER_URL=http://proof-checker:3000

# Rate Limiting
RATE_LIMIT_PROOF_SUBMISSIONS=100
RATE_LIMIT_ACCOUNT_CREATION=5

# Game Configuration
DUEL_MATCH_TIMEOUT=60
DUEL_ROUND_COUNT=3
DUEL_TIME_LIMIT=180
DUEL_PENALTY_SECONDS=15

# Rating System
ELO_K_FACTOR=40
ELO_INITIAL=1000

# Debug Mode (only for development)
DEBUG=false